# Basic WM Control
## reload
super + q
    pkill -USR1 -x sxhkd && bspc wm -r
## quit
super + shift + q
    systemctl --user stop xorg.target && bspc quit

# Launching
## terminal emulator
super + Return
    alacritty
## launcher
super + @p
    rofi -show combi
super + shift + @p
    rofi -theme auth -show combi
## notifications
super + bracketright
    kill -s USR1 $(pidof deadd-notification-center)
## music
super + shift + bracketright
    music-tmux
XF86AudioPlay
    playerctl --current play-pause
## audio
{_,shift} + XF86AudioLowerVolume
    pulsemixer --change-volume -{10,1}
{_,shift} + XF86AudioRaiseVolume
    pulsemixer --change-volume +{10,1}
XF86AudioMute
    pulsemixer --toggle-mute
{XF86MonBrightnessDown,XF86MonBrightnessUp}
    screen-brightness {-5,+5}

# Window Control
## close/kill
super + {_,shift + }c
    bspc node -{c,k}

# Layout Control
## zoom
super + @space
    bspc desktop -l next
# Smart resize, will grow or shrink depending on location.
# Will always grow for floating nodes.
super + alt + {h,j,k,l}
    n=10; \
      { d1=left;   d2=right;  dx=-$n; dy=0;   \
      , d1=bottom; d2=top;    dx=0;   dy=$n;  \
      , d1=top;    d2=bottom; dx=0;   dy=-$n; \
      , d1=right;  d2=left;   dx=$n;  dy=0;   \
      } \
    bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

# Layout Navigation
## focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}
## focus the next/previous window in the current desktop
super + +{_,shift + }Tab
    bspc node -f {next,prev}.local.!hidden.window
## focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} 'focused:^{1-9,10}'

# Floating control
## move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
