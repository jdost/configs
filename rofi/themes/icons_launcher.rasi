configuration {
    combi-modi: [window,drun];
    modi: "combi";

    columns: 5;
    fixed-num-lines: true;

    combi-hide-mode-prefix: true;
    show-icons: true;
    drun-display-format: "{name}";
    window-thumbnail: true;
    window-format: "{t}";
}

* {
    font: "Hack Nerd Font Mono 18";
    background: rgba(0, 0, 0, 0);
    background2: rgba(0, 0, 0, 0.5);
    bar-background: rgba(242, 242, 242, 0.1);
    foreground: rgba(242, 242, 242, 0.9);
    highlight: rgba(123, 123, 123, 0.3);

    margin: 0;
    border: 0;
    padding: 0;
}

window {
    transparency: "real";
    width: 100%;
    height: 100%;
    location: center;
    x-offset: 0;
    y-offset: 0;

    background-color: @background;
    text-color: @foreground;
}

mainbox {
    children: [ inputbar, listview ];

    margin: 20% 25% 15% 25%;
    background-color: @background2;
    border: 0 0 0 0;
    border-radius: 1% 1% 1% 1%;
    spacing: 2%;
    padding: 2% 1% 2% 1%;
}

    inputbar {
        children: [entry];
        background-color: @bar-background;
        text-color: @foreground;
        expand: false;
        border: 0 0 0 0;
        border-color: rgba(200, 200, 200, 1.0);
        border-radius: 12px;
        margin: 0 0 0 0;
        padding: 1.5%;
    }

    prompt { enabled: false; }

        entry {
            text-color: @foreground;
            background-color: @background;
            padding: 0.1% 0 0 0;
            placeholder: "Search";
            placeholder-color: @foreground;
            blink: true;
            horizontal-align: 0;
            expand: true;
        }

    listview {
        background-color: @background;
        columns: 5;
        lines: 3;
        spacing: 0%;
        layout: vertical;
        dynamic: true;
        cycle: false;
    }

        element {
            text-color: @foreground;
            background-color: @background;
            orientation: vertical;
            padding: 2% 0 2% 0;
            border-radius: 0;
            margin: 0;
        }

            element selected {
                background-color: @highlight;
                text-color: @foreground;
                transition: 20;
                border-radius: 12px;
            }

            element-icon {
                size: 64px;
                border: 0;
            }

            element-text {
                horizontal-align: 0.5;
                vertical-align: 0.5;
                text-color: inherit;
                margin: 0.5% 0.5% -0.5% 0.5%;
                expand: true;
                font: "Hack Nerd Font Mono 12";
            }
